<h1>Add Product</h1>

<%= form_with model: @product, url:products_add_path do |form| %>
    <% if @product.errors.any? %>
        <div class="alert alert-danger">
            <% @product.errors.full_messsages.each do |message|%>
                <div> <%= message %> </div>
            <% end %>
        </div>
    <% end %>

    <div class="form-group row px-4 mb-3">
        <%= form.label :product_name, class: "col-sm-1 col-form-label" %>
        <div class="col-sm-6">
            <%= form.text_field :product_name, class: "form-control" %>
        </div>
    </div>
    <div class="form-group row px-4">
        <%= form.label :product_value, class: "col-sm-1 col-form-label" %>
        <div class="col-sm-6">
            <%= form.number_field :product_value, class: "form-control" %>
        </div>
        <br>
    </div>
    <%= form.submit "Add", class:"btn btn-primary w-25 m-4" %>
<% end %>